<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/newform', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
            <% @books.each do |book| %>
              <td>
                <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <td>
                <p>コメント件数：<%= book.book_comments.count %></p>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>




